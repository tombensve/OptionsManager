<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>se.natusoft.tools.optionsmgr</groupId>
    <artifactId>OptionsManager</artifactId>
    <packaging>jar</packaging>
    <version>1.0.2</version>
    <name>OptionsManager</name>

    <url>http://...</url>

    <!--
        Project Information
    -->
    <description>
        Manages application/tool options. Options are mapped to Java Bean properties
        using annotations. Help texts can be specified for options also using
        annotations and a complete help text can be generated by the options manager.
        Options can be loaded from command line arg String[] array, an XML file, or a
        java properties file.
    </description>
    <properties>
        <copyrightYear>2009</copyrightYear>
        <copyrightHolder>Natusoft AB</copyrightHolder>
        <copyrightHolderWeb>http://www.natusoft.se/</copyrightHolderWeb>
    </properties>
    <licenses>
        <license>
            <name>Apache 2.0</name>
            <url>http://www.apache.org/licenses/LICENSE-2.0.html</url>
        </license>
    </licenses>
    <organization>
        <name>${copyrightHolder}</name>
        <url>${copyrightHolderWeb}</url>
    </organization>
    <inceptionYear>${copyrightYear}</inceptionYear>
    <developers>
        <developer>
            <name>Tommy Svensson</name>
            <email>tommy@natusoft.se</email>
        </developer>
    </developers>
    <!--scm>
        <connection>scm:http://optionsmanager.hg.sourceforge.net:8000/hgroot/optionsmanager/optionsmanager</connection>
        <developerConnection>scm:ssh://user@optionsmanager.hg.sourceforge.net/hgroot/optionsmanager/optionsmanager</developerConnection>
        <url>http://optionsmanager.hg.sourceforge.net/hgweb/optionsmanager/</url>
    </scm-->
    <!--issueManagement>
        <system>sourceforge</system>
        <url>http://sourceforge.net/projects/optionsmanager/support</url>
    </issueManagement-->

    <!--
        Dependencies
    -->
    <dependencies>
        <dependency>
            <groupId>se.natusoft.tools.codelicmgr</groupId>
            <artifactId>CodeLicenseManager-annotations-retention-source</artifactId>
            <version>1.0.1</version>
        </dependency>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.5</version>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <!--
        Building
    -->
    <build>
        <plugins>
            <!--
                Setup for java 5.
            -->
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>1.5</source>
                    <target>1.5</target>
                </configuration>
            </plugin>

            <!--
                PDF Generation of site.
            -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-pdf-plugin</artifactId>
                <version>1.1</version>

                <configuration>
                    <includeReports>true</includeReports>
                    <implementation>fo</implementation>
                    <outputDirectory>${project.reporting.outputDirectory}</outputDirectory>
                </configuration>

                <!-- This does for some reason not bite when the site is generated! The pdf generation have to be done separately. -->
                <executions>
                    <execution>
                        <id>pdf</id>
                        <goals>
                            <goal>pdf</goal>
                        </goals>
                        <phase>site</phase>
                    </execution>
                </executions>
            </plugin>

            <!--
                Provide Javadoc skin. Other javadoc config under <reporting/>.
            -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-javadoc-plugin</artifactId>
                <version>2.6.1</version>
                <dependencies>
                    <dependency>
                        <artifactId>biltmore-javadoc-skin</artifactId>
                        <groupId>se.biltmore.maven</groupId>
                        <version>1.0</version>
                    </dependency>
                </dependencies>

                <executions>
                    <execution>
                        <id>jar-javadoc</id>
                        <goals>
                            <goal>jar</goal>
                        </goals>
                        <phase>deploy</phase>
                        <configuration>
                            <attach>true</attach>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <!--
                Define project assemblies.
            -->
            <plugin>
                <artifactId>maven-assembly-plugin</artifactId>
                <!--version>2.2-beta-5</version-->
                <configuration>
                    <descriptors>
                        <descriptor>file:${basedir}/src/assembly/bin-dist.xml</descriptor>
                    </descriptors>
                </configuration>
            </plugin>

            <!--
                Force checksums when installing to repository.

                I suspect that this might be unneccesarry since I think
                deploy creates checksums anyhow when deploying to external
                repository.
            -->
            <plugin>
                <artifactId>maven-install-plugin</artifactId>
                <configuration>
                    <createChecksum>true</createChecksum>
                </configuration>
            </plugin>

            <!--
                Copy relevant license files to target on install.
            -->
            <plugin>
                <groupId>se.natusoft.tools.codelicmgr</groupId>
                <artifactId>CodeLicenseManager-maven-plugin</artifactId>
                <version>1.0.1</version>

                <dependencies>
                    <dependency>
                        <groupId>se.natusoft.tools.codelicmgr</groupId>
                        <artifactId>CodeLicenseManager-licenses-common-opensource</artifactId>
                        <version>1.0.1</version>
                    </dependency>
                </dependencies>

                <executions>
                    <execution>
                        <id>apply-licence-info</id>
                        <goals>
                            <goal>install</goal>
                        </goals>
                        <phase>install</phase>
                        <configuration>

                            <installOptions>
                                <verbose>true</verbose>
                                <licenseDir>${basedir}/target/license</licenseDir>
                                <thirdpartyLicenseDir>${basedir}/target/license/thirdparty</thirdpartyLicenseDir>
                            </installOptions>

                        </configuration>
                    </execution>
                </executions>
            </plugin>

        </plugins>
    </build>

    <!--
        Distribution Management
    -->
    <distributionManagement>
        <repository>
            <id>deploy-maven-natusoft-se</id>
            <name>maven.natusoft.se</name>
            <url>file:/LVolumes/Development/repository/maven/maven.natusoft.se</url>
        </repository>
    </distributionManagement>

    <repositories>
        <repository>
            <id>maven-natusoft-se</id>
            <name>Natuosft maven repository</name>
            <url>http://maven.natusoft.se/</url>
        </repository>
    </repositories>

    <pluginRepositories>
        <pluginRepository>
            <id>plugin-maven-natusoft-se</id>
            <name>Natusoft maven repository.</name>
            <url>http://maven.natusoft.se/</url>
        </pluginRepository>
    </pluginRepositories>

    <!--
        Site / Reporting
    -->
    <reporting>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-javadoc-plugin</artifactId>
                <version>2.6.1</version>
                <configuration>
                    <show>public</show>
                    <excludePackageNames>se.natusoft.tools.optionsmgr.internal*</excludePackageNames>
                    <stylesheetfile>css/javadoc-stylesheet.css</stylesheetfile>
                </configuration>
            </plugin>

        </plugins>
    </reporting>

    <!--
        Profiles
    -->
    <profiles>
        <profile>
            <!--
                This profile runs the CodeLicenseManager maven plugin and updates the source code
                with relevant information specified in this pom.
            -->
            <id>apply-licence-info</id>
            <build>
                <plugins>
                    <plugin>

                        <groupId>se.natusoft.tools.codelicmgr</groupId>
                        <artifactId>CodeLicenseManager-maven-plugin</artifactId>
                        <version>1.0.1</version>

                        <dependencies>
                            <dependency>
                                <groupId>se.natusoft.tools.codelicmgr</groupId>
                                <artifactId>CodeLicenseManager-licenses-common-opensource</artifactId>
                                <version>1.0.1</version>
                            </dependency>
                            <dependency><!-- Since there is also a java updater in the below updater this must be specified fist to override the other. -->
                                <groupId>se.natusoft.tools.codelicmgr</groupId>
                                <artifactId>CodeLicenseManager-source-updater-java-annotation</artifactId>
                                <version>1.0.1</version>
                            </dependency>
                            <dependency><!-- This is used for CSS. -->
                                <groupId>se.natusoft.tools.codelicmgr</groupId>
                                <artifactId>CodeLicenseManager-source-updater-slashstar-comment</artifactId>
                                <version>1.0.1</version>
                            </dependency>
                            <dependency>
                                <groupId>se.natusoft.tools.codelicmgr</groupId>
                                <artifactId>CodeLicenseManager-source-updater-html-xml</artifactId>
                                <version>1.0.1</version>
                            </dependency>
                        </dependencies>

                        <configuration>

                            <!-- All options are optional. -->
                            <codeOptions>
                                <verbose>true</verbose>
                                <!-- If not set uses extension on source file to resolve. -->
                                <codeLanguage><!-- by source extension. --></codeLanguage>
                                <!-- If true updates the license information in source code. -->
                                <updateLicenseInfo>true</updateLicenseInfo>
                                <!-- If true updates the copyright information in source code. -->
                                <updateCopyright>true</updateCopyright>
                                <!-- If true updates the project information in source code. -->
                                <updateProject>true</updateProject>
                                <!-- If true will add authors information to source files that does not have it. This is not always implemented! -->
                                <addAuthorsBlock>true</addAuthorsBlock>
                                <!-- The directories to scan for source code to update with project & license information. -->
                                <sourceCodeDirs>
                                    src/main/java/**/.*.java,src/main/css/.*.css,src/assembly/**/.*.xml
                                </sourceCodeDirs>

                            </codeOptions>

                            <!--userData>
                                <name>defaultAuthor</name><value>Tommy Svensson</value>
                                <name>defaultAuthorEmail</name><value>tommy@natusoft.se</value>
                            </userData-->

                        </configuration>

                        <executions>
                            <execution>
                                <id>apply-licence-info</id>
                                <goals>
                                    <goal>apply</goal>
                                </goals>
                                <phase>generate-sources</phase>
                            </execution>
                        </executions>

                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

</project>
